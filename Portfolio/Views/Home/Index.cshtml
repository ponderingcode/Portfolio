function e3_main(val0, val1) {
    while (1 >= val0 || 100 <= val0 || isNaN(val0)) {
        val0 = promptForValue(true);
    }
    
    while (1 >= val1 || 100 <= val1 || isNaN(val1)) {
        val1 = promptForValue(true, true);
