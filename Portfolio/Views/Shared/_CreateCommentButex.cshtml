@model Portfolio.Models.CodeFirst.Comment
@using Microsoft.AspNet.Identity
@using Microsoft.AspNet.Identity.EntityFramework
@using Portfolio.Models

@using (Html.BeginForm(ActionName.CREATE, ControllerName.COMMENTS, FormMethod.Post, new { enctype = EncodingType.MULTIPART_FORM_DATA }))
            {
@Html.AntiForgeryToken()
    @Html.HiddenFor(model => model.Id)
    @Html.HiddenFor(model => model.PostId)
    @Html.HiddenFor(model => model.AuthorId)
    @Html.HiddenFor(model => model.Created)
    @Html.HiddenFor(model => model.Author.Email)

    <script src="//cdn.tinymce.com/4/tinymce.min.js"></script>
    <script>tinymce.init({ selector:'textarea' });</script>

    <div class="Reply-box">
        <div class="row">
            <div class="col-sm-12">
                <form id="comment-form" class="row" name="comment-form" method="post">
                    @*<input type="hidden" name="PostId" value="@Model.Id" />*@
                    <div class="col-sm-6">
                        <div class="form-group">
                        </div>
                    </div>
                    <div class="col-sm-12">
                        <div class="form-group">
                            @Html.DisplayFor(model => model.Author.DisplayName)
                            @Html.TextAreaFor(model => model.Body)
                            @*<textarea name="message" id="message" required="required" class="form-control" rows="5" placeholder="Enter Message"></textarea>*@
                        </div>
                        <div class="form-group">
                            <button type="submit" class="btn btn-submit pull-right">Submit</button>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
}

<div>
    @Html.ActionLink("Back to List", ActionName.INDEX)
</div>

@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
